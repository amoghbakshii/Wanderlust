<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br><br>
    <h3>Edit Your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" required class="form-control" value="<%= listing.title %>" type="text"/>
            <div class="invalid-feedback">Please Enter a short Title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
             <textarea name="listing[description]" required class="form-control" ><%= listing.description %></textarea>
             <div class="invalid-feedback">Please Enter a short description</div>
        </div>

        <div class="mb-3">
            <label for="image_name" class="form-label">Image Name</label>
            <input name="listing[image][filename]" class="form-control" value="<%= listing.filename %>" />
        </div>

        <div class="mb-3">
            <label for="url" class="form-label">Image URL</label>
            <input name="listing[image][url]" required class="form-control" value="<%= listing.image.url %>"/>
            <div class="invalid-feedback">Please Enter your image link</div>
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" required class="form-control" value="<%= listing.price %>" " type="number" />
            <div class="invalid-feedback">Please Enter your price</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" required class="form-control" value="<%= listing.country %>" " type="text" />
            <div class="invalid-feedback">Please enter the country</div>
        </div>

    </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" required class="form-control" value="<%= listing.location %>" type="text" />
            <div class="invalid-feedback">Please Enter the location</div>
        </div>
    
    <br>
        <button class="btn btn-dark mb-3 edit-btn">Edit</button>
    </form>
    <br><br>
</div>
</div>

