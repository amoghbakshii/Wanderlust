<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <br><br><br>
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" 
    novalidate class="needs-validation"
     enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add a intresting name for your listing!!" required class="form-control" type="text"/>
        <div class="valid-feedback">Title looks good!</div>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter Description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please Enter a short description</div>
    </div>


    <div class="mb-3"> 
        <label for="description" class="form-label">Image</label>
        <input name="image" class="form-control" type="file" required />
    </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="description" class="form-label">Price</label>
            <input name="listing[price]" class="form-control" required placeholder="Enter Price" />
            <div class="invalid-feedback">Please Enter a valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="description" class="form-label">Country</label>
            <input name="listing[country]" class="form-control" required placeholder="Enter country" type="text" />
            <div class="invalid-feedback">Please Enter a valid Country</div>

        </div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Location</label>
        <input name="listing[location]" class="form-control" required placeholder="Enter location" type="text" />
        <div class="invalid-feedback">Please Enter a valid Location</div>
    </div>
        <br>
        <button class="btn btn-dark mb-3 add-btn">Add</button>
        <br><br>
    </form>
</div>
</div>
</body>


