<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
    <h1 class="col-6 offset-3">Login to your Wanderlust Account</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" placeholder="Enter your Username" required class="form-control" type="text" id="username"/>
                <div class="valid-feedback"> Looks good!</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" placeholder="Enter your Password" required class="form-control" type="password" id="email"/>
            </div>
            <button class="btn btn-success">Login</button>
            <br><br><br><br><br><br><br><br>
        </form>
    </div>
</div>